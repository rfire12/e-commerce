<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/detail_product_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="3"
            android:lines="3"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_product_price"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="32sp"
            android:textColor="@color/colorPrimaryDark"/>

    <Button
            android:text="@string/decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_decrease"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/white"
            android:textColor="@color/colorPrimaryDark"/>

    <Button
            android:text="@string/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_increase"
            app:layout_constraintStart_toEndOf="@+id/detail_amount_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_price"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/white"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_amount_text"
            app:layout_constraintStart_toEndOf="@+id/detail_decrease"
            app:layout_constraintTop_toTopOf="@+id/detail_decrease"
            app:layout_constraintBottom_toBottomOf="@+id/detail_decrease"
            android:layout_marginStart="8dp"
            android:textSize="30sp"/>

    <Button
            android:text="@string/add_to_cart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_to_cart"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_price"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/white"
            android:textColor="@color/colorPrimaryDark"/>
</androidx.constraintlayout.widget.ConstraintLayout>