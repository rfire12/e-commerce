<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="94dp"
            android:layout_height="84dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/productIdView"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/productImageView"
            android:layout_toRightOf="@id/productImageView"
            android:text="TextView"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/productPriceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productIdView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/productImageView"
            android:layout_toRightOf="@id/productImageView"
            android:text="TextView"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productDescriptionView"
            android:layout_width="270dp"
            android:layout_height="32dp"
            android:layout_below="@id/productPriceView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/productImageView"
            android:layout_toRightOf="@id/productImageView"
            android:text="TextView" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>